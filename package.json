{
  "name": "next-nest",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "dev:web": "pnpm --filter web run dev",
    "dev:api": "pnpm --filter api run start:dev",
    "api:db:up": "docker compose -f apps/api/docker-compose.yml up -d",
    "api:db:down": "docker compose -f apps/api/docker-compose.yml down",
    "api:prisma:generate": "pnpm --filter api run prisma:generate",
    "api:prisma:migrate": "pnpm --filter api run prisma:migrate",
    "api:prisma:studio": "pnpm --filter api run prisma:studio",
    "api:prisma:seed": "pnpm --filter api run prisma:seed",
    "api:prisma:format": "pnpm --filter api exec prisma format",
    "web:prisma:format": "pnpm --filter web exec prisma format",
    "prisma:format": "pnpm --filter api exec prisma format && pnpm --filter web exec prisma format",
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "lint": "pnpm -r run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.15.0",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@nestjs/cli": "^11.0.14",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  }
}
