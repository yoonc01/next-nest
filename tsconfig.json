{
  "compilerOptions": {
    // 기본 설정
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",

    // 엄격한 타입 체크
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    // 모듈 해석
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    // 출력 설정
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // 경로 별칭 (워크스페이스 간 참조)
    "baseUrl": ".",
    "paths": {
      "@next-nest/*": ["packages/*"]
    }
  },
  "exclude": ["node_modules", "dist", "build", ".next", "out"]
}
